<Page x:Class="AccountingIE.TransactionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AccountingIE"
      mc:Ignorable="d"
      Title="TransactionPage" Height="Auto" Width="Auto">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
            <Button Content="Filter" Click="FilterButton_Click"/>
            <Button Content="Add Transaction" Click="AddTransactionButton_Click" Margin="10,0,0,0"/>
            <Button Content="All accounts" Click="AllAccounts_Click" Margin="10,0,0,0"/>
        </StackPanel>

        <ListBox Name="transactionsListBox" Margin="10,50,10,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Date}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Category}"/>
                        <TextBlock Text="{Binding Amount, StringFormat='â‚½{0:N2}'}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>