<Page x:Class="AccountingIE.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AccountingIE"
      mc:Ignorable="d"
      Title="Login" >
    <Grid>
        <StackPanel Margin="15">
            <Label>Login:</Label>
            <TextBox x:Name="LoginBox" Text="admin"/>
            <Label>Password:</Label>
            <PasswordBox x:Name="PasswordBox" Password="admin"/>
            <Button Content="Sign in" Margin="0, 20, 0,0" Click="LoginButton_Click"/>
            <Button Content="I don't have an account yet" Margin="0, 20, 0,0" Click="NoAccountButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
