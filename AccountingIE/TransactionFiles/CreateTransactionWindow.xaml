<Window x:Class="AccountingIE.CreateTransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:AccountingIE"
        mc:Ignorable="d"
        Title="CreateTransactionWindow" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Amount:"/>
            <TextBox x:Name="amountTextBox" Margin="0,0,0,10"/>
            
            <TextBlock Text="Account:"/>
            <ComboBox x:Name="accountComboBox" ItemsSource="{Binding AccountList}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedAccount}" Margin="0,0,0,10"/>

            <TextBlock Text="Date:"/>
            <DatePicker x:Name="datePicker" Margin="0,0,0,10"/>

            <TextBlock Text="Category:"/>
            <TextBox x:Name="categoryTextBox" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal">
                <Button Content="Create" Click="Create_Click" Margin="0,0,10,0"/>
                <Button Content="Cancel" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
